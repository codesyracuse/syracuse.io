---
import Layout from "../layouts/Page.astro";
import StepCard from "../components/StepCard.astro";
import { getUpcomingEvents } from "../lib/meetup";

const events = await getUpcomingEvents();
console.log(events);
---

<Layout
  content={{
    title: "Syracuse.io",
    subtitle: "Your local developer community",
    hero: {
      imagePath: "/src/assets/clintonsquare.jpg",
      altText: "Historic photo of Clinton Square in Downtown Syracuse",
    },
  }}
>
  <p>
    Welcome to <a href="https://syracuse.io">Syracuse.io</a>, home to Central New York's
    diverse and growing tech community. Whether you're a seasoned developer, just starting
    your coding journey, or new to the area, you'll find a welcoming community here with
    active <a href="/groups/">meetups</a>, an engaged <a href="https://join.slack.com/t/syracuseio/shared_invite/zt-aw7rkg3q-2cgCecN524oOVarFJWMOPw">Slack community</a>,
    <a href="/jobs">local job opportunities</a>, and <a href="/resources/">resources</a> for developers.
  </p>

  <h2>Start Here</h2>

  <div class="not-prose">
    <div class="grid gap-6 md:grid-cols-2">
      <StepCard
        title="Join Our Slack Community"
        description="Connect with 700+ local developers in our active Slack workspace. Get help with code, share opportunities, and chat in channels like #general, #javascript, and #jobs."
        ctaText="Learn More"
        ctaHref="/start-here/slack"
        ctaExternal={false}
      />

      <StepCard
        title="Subscribe to Our Newsletter"
        description="Stay updated with monthly roundups of local tech events, job postings, and community highlights. Join 1,650+ subscribers!"
        ctaText="Learn More"
        ctaHref="/start-here/newsletter"
        ctaExternal={false}
      />

      <StepCard
        title="Attend a Meetup"
        description="Learn, network, and collaborate at recurring in-person events like OpenHack, Comp Sci Book Club, and general tech meetups. All skill levels welcome!"
        ctaText="Learn More"
        ctaHref="/start-here/meetups"
        ctaExternal={false}
      />

      <StepCard
        title="Browse Local Tech Jobs"
        description="Explore tech job opportunities from companies in Syracuse and Central New York. From startups to established firms, find your next role here."
        ctaText="Browse Jobs"
        ctaHref="/jobs"
        ctaExternal={false}
      />
    </div>
  </div>

  {
    events.length > 0 && (
      <>
        <h2>Upcoming Events</h2>
        <div class="not-prose mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
          {events.map((event) => (
            <article class="flex flex-col items-start justify-between">
              <div class="relative w-full">
                <img
                  src={event.images?.[0].source || "/default-event-image.jpg"}
                  alt={event.name}
                  class="aspect-video w-full rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2]"
                />
                <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10" />
              </div>
              <div class="w-full">
                <div class="mt-8 flex items-center gap-x-4 text-xs">
                  <time
                    datetime="2020-03-16"
                    class="text-gray-500 dark:text-gray-300"
                  >
                    {new Date(event.dateTime).toLocaleDateString("en-US", {
                      weekday: "long",
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                      hour: "numeric",
                      minute: "2-digit",
                    })}
                  </time>
                  {/* <a
                href="#"
                class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100"
              >
                Marketing
              </a> */}
                </div>
                <div class="group relative">
                  <h3 class="mt-3 text-lg/6 font-semibold text-gray-900 group-hover:text-gray-600 dark:text-white dark:group-hover:text-gray-400">
                    <a href={event.url}>
                      <span class="absolute inset-0" />
                      {event.name}
                    </a>
                  </h3>
                  <p class="mt-5 line-clamp-3 text-sm/6 text-gray-600 dark:text-white">
                    {event.description}
                  </p>
                </div>
                <div class="relative mt-8 flex items-center gap-x-4">
                  <img
                    src={event.hostPhoto.source}
                    alt=""
                    class="size-10 rounded-full bg-gray-100 object-cover object-top"
                  />
                  <div class="text-sm/6">
                    <p class="text-gray-600 dark:text-gray-400">Hosted by:</p>
                    <p class="font-semibold text-gray-900 dark:text-white">
                      {event.host.name}
                    </p>
                  </div>
                </div>
              </div>
            </article>
          ))}
        </div>
      </>
    )
  }
</Layout>
