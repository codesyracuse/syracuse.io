---
const { title, subtitle } = Astro.props;
---

<div
  class="relative mx-auto my-24 flex max-w-3xl flex-col items-center px-6 text-center font-mono [text-shadow:_0_1px_0_rgb(0_0_0_/_40%)] lg:px-0"
>
  <h1 class="text-5xl font-extrabold tracking-widest dark:text-white">
    {title}
  </h1>
  <hr
    class="mb-7 mt-5 h-1 w-24 rounded border-0 bg-orange-500 bg-blend-darken shadow-2xl shadow-black"
  />
  {
    subtitle && (
      <p class="text-xl text-gray-600 dark:text-gray-300">{subtitle}</p>
    )
  }
</div>
